{% extends 'base.html.twig' %}

{% block body %}

	<h1>Log In</h1>

	<form action="{{ path('security_login') }}" method="post">
		<div class="form-group">
			<input placeholder="Enter your email address" required name="_username" type="text" class="form-control">
		</div>
		<div class="form-group">
			<input placeholder="Enter your Password" required name="_password" type="password" class="form-control">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Login</button>
		</div>
		<div class="form-group">
			Don't have an account?<a href="/inscription">Sign Up</a>
		</div>

	</form>


{% endblock %}
